<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExercicioFamilia.ListaAlunosActivity">


    <TextView
        android:id="@+id/txListaDeAlunos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My family/friends list"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="16dp"

        android:layout_marginLeft="100dp"
        android:layout_marginRight="50dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAlunosRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txListaDeAlunos"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txListaDeAlunos"
        tools:itemCount="7"
        tools:listitem="@layout/alunos_item" />

</RelativeLayout>